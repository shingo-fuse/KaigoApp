<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KaigoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->w
        <item name="colorPrimary">#8BC34A</item>
        <item name="colorPrimaryVariant">#CDDC39</item>
        <item name="colorOnPrimary">#0A0A0A</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#4CAF50</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.KaigoApp.NoActionBar">
        <!-- Window Action Bar. -->
        <item name="windowActionBar">false</item>
        <!-- Window NoTitle. -->
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Style Name. -->
    <style name="Theme.Kaigo_App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- Style Name. -->
    <style name="Theme.kaigo_App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>